{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"],   // ðŸ‘ˆ thÃªm dÃ²ng nÃ y
    "strict": true,
    "jsx": "react-jsx",
