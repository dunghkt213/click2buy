{
  "openapi": "3.0.0",
  "paths": {
    "/analytics/revenue": {
      "get": {
        "description": "Trả về dữ liệu doanh thu theo ngày trong khoảng thời gian (tuần/tháng). Chỉ seller mới có quyền truy cập.",
        "operationId": "AnalyticsController_getRevenue",
        "parameters": [
          {
            "name": "type",
            "required": false,
            "in": "query",
            "description": "Khoảng thời gian thống kê (mặc định: WEEK)",
            "schema": {
              "enum": [
                "WEEK",
                "MONTH"
              ],
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Danh sách doanh thu theo ngày",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RevenueDataItem"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Chưa đăng nhập hoặc token không hợp lệ"
          },
          "403": {
            "description": "Chỉ seller mới có quyền truy cập"
          }
        },
        "security": [
          {
            "JWT-auth": []
          }
        ],
        "summary": "Lấy thống kê doanh thu",
        "tags": [
          "Analytics"
        ]
      }
    },
    "/analytics/top-products": {
      "get": {
        "description": "Trả về top N sản phẩm bán chạy nhất của seller, sắp xếp theo số lượng đã bán.",
        "operationId": "AnalyticsController_getTopProducts",
        "parameters": [
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "description": "Số lượng sản phẩm trả về (mặc định: 5)",
            "schema": {
              "example": 5,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Danh sách sản phẩm bán chạy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TopProductItem"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Chưa đăng nhập hoặc token không hợp lệ"
          },
          "403": {
            "description": "Chỉ seller mới có quyền truy cập"
          }
        },
        "security": [
          {
            "JWT-auth": []
          }
        ],
        "summary": "Lấy danh sách sản phẩm bán chạy",
        "tags": [
          "Analytics"
        ]
      }
    },
    "/analytics/debug": {
      "get": {
        "description": "Trả về thông tin user từ JWT token để debug",
        "operationId": "AnalyticsController_debugUser",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "security": [
          {
            "JWT-auth": []
          }
        ],
        "summary": "Debug endpoint - kiểm tra seller ID từ token",
        "tags": [
          "Analytics"
        ]
      }
    }
  },
  "info": {
    "title": "Seller Analytics Service API",
    "description": "API documentation cho Seller Analytics Service - Click2Buy E-commerce",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "Analytics",
      "description": "APIs thống kê doanh thu và sản phẩm cho Seller"
    }
  ],
  "servers": [],
  "components": {
    "securitySchemes": {
      "JWT-auth": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "name": "JWT",
        "description": "Enter JWT token",
        "in": "header"
      }
    },
    "schemas": {
      "RevenueDataItem": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "example": "2025-12-01",
            "description": "Ngày (YYYY-MM-DD)"
          },
          "totalRevenue": {
            "type": "number",
            "example": 1500000,
            "description": "Tổng doanh thu trong ngày (VND)"
          },
          "totalOrders": {
            "type": "number",
            "example": 5,
            "description": "Tổng số đơn hàng trong ngày"
          }
        },
        "required": [
          "date",
          "totalRevenue",
          "totalOrders"
        ]
      },
      "TopProductItem": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011",
            "description": "ID sản phẩm"
          },
          "productName": {
            "type": "string",
            "example": "iPhone 15 Pro Max",
            "description": "Tên sản phẩm"
          },
          "totalSold": {
            "type": "number",
            "example": 150,
            "description": "Tổng số lượng đã bán"
          },
          "totalRevenue": {
            "type": "number",
            "example": 4500000000,
            "description": "Tổng doanh thu từ sản phẩm (VND)"
          }
        },
        "required": [
          "productId",
          "productName",
          "totalSold",
          "totalRevenue"
        ]
      }
    }
  }
}